<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent">


    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/project_tab_id"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorCard"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        app:tl_indicator_color="@color/light_red"
        app:tl_textSelectColor="@color/white"
        app:tl_textUnselectColor="@color/grey"
        app:tl_divider_color="@color/light_red"
        app:tl_divider_width="1dp"
        app:tl_divider_padding="10dp"
        app:tl_indicator_corner_radius="5dp"
        app:tl_indicator_margin_left="5dp"
        app:tl_indicator_margin_right="5dp"
        app:tl_indicator_style="BLOCK" />


    <android.support.v4.view.ViewPager
        android:layout_below="@id/project_tab_id"
        android:id="@+id/project_vp_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>

