<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.wanandroid_2.activity.WebsiteActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/webtoolbar_id"
        android:layout_width="match_parent"
        app:navigationIcon="@mipmap/backleft"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="20sp"
            android:id="@+id/webtoolbar_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/changyongweb"
            android:textColor="@color/black" />

    </android.support.v7.widget.Toolbar>

    <include layout="@layout/item_line"/>

    <com.example.wanandroid_2.widgth.FlowLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center"
        android:id="@+id/flowlayout_id"
        android:layout_height="match_parent"/>

</LinearLayout>
