<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.example.wanandroid_2.webactivity.HomeWebActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/homw_web_toolbar_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_07BAF4"
        app:navigationIcon="@mipmap/leftjiantou">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/home_web_toolbar_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:text="xxx"
                android:layout_marginRight="40dp"
                android:textColor="@color/white"
                android:textSize="16sp" />


            <ImageView
                android:id="@+id/home_img_xin"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/follow_unselected" />
        </RelativeLayout>

    </android.support.v7.widget.Toolbar>


    <WebView
        android:id="@+id/home_web"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/homw_web_toolbar_id" />

</RelativeLayout>
